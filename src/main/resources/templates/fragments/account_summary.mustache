<a class="account-summary" href="/account/{{acc_id}}">
    <p class="account-name">{{name}}</p>
	<p class="account-balance" id="{{acc_id}}-balance"></p>
	<script>
		var balance = {{balance}};
		var formattedBalance = balance.toFixed(2);
		document.getElementById("{{acc_id}}-balance").innerHTML = "$ " + formattedBalance;
	</script>
</a>